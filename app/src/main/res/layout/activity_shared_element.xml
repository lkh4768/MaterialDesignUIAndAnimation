<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wes.materialdeisignuiandanimation.ui.SharedElement.SharedElementActivity">

    <ImageView
        android:id="@+id/sharedActivityImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/icon"
        android:transitionName="@string/activity_image_trans" />

    <TextView
        android:id="@+id/sharedActivityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/sharedActivityImage"
        android:text="@string/RecyclerViewAndRippleEffect"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>
